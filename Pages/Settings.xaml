<Page x:Class="Project_C14.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Project_C14"
      mc:Ignorable="d"
      Title="Settings" Height="500" Width="1200">
    <Grid>
        <Border Style="{DynamicResource MainBorder}" Margin="30 0" >
            <Grid>
                <Label Content="Darkmode" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 200 0" FontSize="15" Foreground="White"></Label>

                <ToggleButton x:Name="ThemeToggleButton" IsChecked="{Binding Darkmode}" Style="{DynamicResource IphoneToggleButton}" Click="ThemeToggleButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Page>
